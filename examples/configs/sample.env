# DALI Legal AI - Sample Environment Configuration
# Copy this file to .env and customize for your setup

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3

# Firecrawl Configuration (optional - for enhanced web scraping)
# Get your API key from https://firecrawl.dev
# FIRECRAWL_API_KEY=your_api_key_here

# Chroma Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./data/embeddings
CHROMA_COLLECTION_NAME=legal_documents

# Streamlit Web Interface Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Security Configuration (generate your own keys in production)
# Use: python -c "import secrets; print(secrets.token_hex(32))"
# DALI_SECRET_KEY=your_secret_key_here
# DALI_ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/dali.log

# Feature Flags
ENABLE_WEB_SCRAPING=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_CONVERSATION_HISTORY=true

# Performance Configuration
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_SEARCH_RESULTS=20

# Saudi Arabia Specific Settings
DEFAULT_JURISDICTION=Saudi Arabia
DEFAULT_LANGUAGE=en
ENABLE_ARABIC_SUPPORT=true

